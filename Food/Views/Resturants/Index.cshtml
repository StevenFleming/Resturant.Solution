@{
    Layout = "_Layout";
}

@using Food.Models;

<h2>Resturants</h2>
@if (Model.Count == 0)
{
    <h3>No Resturants have been added yet!</h3>
}

@foreach (Resturant resturant in Model)
{
    <li>@Html.ActionLink($"{ resturant.Name }", "Details", new { id = resturant.Id })</li>
}

<p>@Html.ActionLink("Add new Resturant", "Create")</p>
<p>@Html.ActionLink("Back to Cusisine Lists", "Index", "Resturant")</p>
