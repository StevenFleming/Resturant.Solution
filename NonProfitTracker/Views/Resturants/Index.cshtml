@{
    Layout = "_Layout";
}

@using NonProfitTracker.Models;

<h2>Board Members</h2>
@if (Model.Count == 0)
{
    <h3>No Board Members have been added yet!</h3>
}

@foreach (BoardMember boardMember in Model)
{
    <li>@Html.ActionLink($"{ boardMember.Name }", "Details", new { id = boardMember.Id })</li>
}

<p>@Html.ActionLink("Add new Board Member", "Create")</p>
<p>@Html.ActionLink("Back to Non Profit Lists", "Index", "NonProfits")</p>
